<%- include( './../header' ) %>

    <h2>Editar Vaga: <a href="/admin/vagas">Vagas</a></h2>

    <div>
        <form method="POST">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" value="<%= vaga.titulo %>">

            <label for="descricao">Descrição</label>
            <textarea name="descricao" id="descricao"><%= vaga.descricao %></textarea>

            <label for="categoria">Categoria</label>

            <select name="categoria" id="categoria">
                <% categorias.forEach( categoria => { %>
                    <option value="<%= categoria.id %>" <% if( categoria.id === vaga.categoria ) { %> selected <% } %> ><%= categoria.categoria %></option>
                <% } ); %> 
            </select>

            <button>Salvar</button>
        </form>
    </div>    

<%- include( './../footer' ) %>